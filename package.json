{
  "name": "quote-generator-monorepo",
  "version": "1.0.0",
  "description": "語錄產生器全端專案",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --port 8000",
    "build": "cd frontend && npm run build",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "keywords": ["quote", "generator", "fastapi", "vue", "alpine"],
  "author": "",
  "license": "ISC"
}